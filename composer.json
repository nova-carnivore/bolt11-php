{
    "name": "nova-carnivore/bolt11-php",
    "description": "Modern PHP 8.3+ BOLT 11 Lightning Network invoice encoder/decoder",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "bitcoin",
        "lightning",
        "lightning-network",
        "bolt11",
        "invoice",
        "payment-request",
        "bech32",
        "lnbc"
    ],
    "authors": [
        {
            "name": "Nova Carnivore",
            "email": "nova@novacarnivore.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "simplito/elliptic-php": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Nova\\Bitcoin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nova\\Bitcoin\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "ci": [
            "@test",
            "@analyse",
            "@cs-check"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
